{
    "compilerOptions": {
        "types": ["node"],
        "typeRoots": [
            "./types",
            "./node_modules/@types"
        ],
        "target": "esnext",
        "watch": true,
        "lib": [
            "dom",
            "es2017"
        ],
        "module": "commonJS",
        "jsx": "react",
        "sourceMap": true,
        "outDir": "./build",
        "removeComments": true,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "preserveConstEnums": true
    },
    "include": [
        "./client/**/*",
        "./client/components/*"
    ],
    "exclude": [
        "node_modules"
    ]
}